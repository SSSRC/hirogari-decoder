{
    "name": "hirogari-decoder",
    "version": "1.0.0",
    "description": "Telemetry Decoder software for CubeSat HIROGARI",
    "homepage": "./",
    "bugs": "https://github.com/SSSRC/hirogari-decoder/issues",
    "license": "GPL-2.0-only",
    "author": "wowry, SSSRC <dev.wowry@gmail.com>",
    "funding": "https://www.sssrc.aero.osakafu-u.ac.jp/contribution/",
    "main": "main/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/SSSRC/hirogari-decoder.git"
    },
    "scripts": {
        "build": "react-scripts build",
        "start": "run-s build start:electron",
        "start:react": "react-scripts start",
        "start:electron": "cross-env NODE_ENV=development electron .",
        "package:win": "electron-builder --win",
        "package:mac": "electron-builder --mac",
        "package:linux": "electron-builder --linux",
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore",
        "format": "prettier \"**/*.{js,ts,jsx,tsx,json}\" --write --ignore-path .gitignore"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,ts,jsx,tsx}": [
            "eslint",
            "prettier --write"
        ],
        "**/*.json": "prettier --write"
    },
    "dependencies": {
        "@date-io/date-fns": "1.x",
        "@material-ui/core": "^4.11.2",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "@material-ui/pickers": "^3.2.10",
        "@material-ui/styles": "^4.11.2",
        "@reduxjs/toolkit": "^1.2.5",
        "date-fns": "^2.16.1",
        "encoding-japanese": "^1.0.30",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-hook-form": "^6.13.0",
        "react-redux": "^7.2.0",
        "react-scripts": "4.0.1"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/encoding-japanese": "^1.0.17",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-redux": "^7.1.7",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "classnames": "^2.2.6",
        "cross-env": "^7.0.3",
        "electron": "^12.0.1",
        "electron-builder": "^22.10.5",
        "eslint-config-prettier": "^7.0.0",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "typescript": "~3.8.2"
    },
    "private": true,
    "build": {
        "appId": "com.sssrc.hirogaridecoder",
        "productName": "HIROGARI Decoder",
        "copyright": "Copyright Â© 2021 SSSRC",
        "extends": null,
        "files": [
            "assets",
            "build",
            "main"
        ],
        "extraResources": [
            "decoder/build"
        ],
        "publish": {
            "provider": "github",
            "owner": "SSSRC",
            "repo": "hirogari-decoder",
            "releaseType": "release"
        },
        "linux": {
            "artifactName": "HIROGARI-Decoder-${version}-linux.${ext}",
            "target": [
                "deb",
                "rpm"
            ],
            "icon": "assets/icon.icns",
            "category": "Science"
        },
        "mac": {
            "artifactName": "HIROGARI-Decoder-${version}-mac.${ext}",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "assets/icon.icns",
            "category": "public.app-category.utilities"
        },
        "win": {
            "artifactName": "HIROGARI-Decoder-${version}-win.${ext}",
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
